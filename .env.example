# Configuração do Banco de Dados
database=sqlite
sqlite_db=database.db

# Analytics (opcional - deixe vazio para desabilitar analytics)
analytics_db=analytics.db

# Segurança e Sessões
SESSION_KEY=LONG_LONG_KEY
SESSION_SECRET=LONG_LONG_SECRET

# Domínio
# Em desenvolvimento: http://localhost
# Em produção com SSL: https://seudominio.com
DOMAIN=https://harmonista.org

# Configuração SSL/HTTPS (deixe vazio para modo desenvolvimento HTTP)
# Caminhos para certificados gerados pelo Certbot
# Deixe vazio ou comente para rodar em modo desenvolvimento (apenas HTTP)
SSL_CERT_PATH=/etc/letsencrypt/live/harmonista.org/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/harmonista.org/privkey.pem

# Para desenvolvimento local (sem SSL), comente as linhas acima e use:
# DOMAIN=http://localhost
# SSL_CERT_PATH=
# SSL_KEY_PATH=

# Configuração de Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@harmonista.org

# Porta (opcional, padrão: 80)
# Apenas usado em modo desenvolvimento (sem SSL)
# Em produção com SSL, as portas 80 e 443 são usadas automaticamente
PORT=80